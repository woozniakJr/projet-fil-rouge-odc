# 1. Utilise l'image officielle de Node.js
FROM node:18-alpine AS build

# 2. Cr√©e un dossier de travail dans le conteneur
WORKDIR /app

# 3. Copie les fichiers du projet
COPY package.json ./

# 4. Installe les d√©pendances
RUN npm install

# 5. Copie le reste des fichiers
COPY . .

# 6. Build l'application
RUN npm run build

# Phase de production
FROM nginx:stable-alpine AS production

# üî• On ajoute le fichier de config nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

# Copie des fichiers g√©n√©r√©s
COPY --from=build /app/dist /usr/share/nginx/html

# Exposition du port
EXPOSE 80

# D√©marrage de nginx
CMD ["nginx","-g", "daemon off;"]
